      "type": "email",
      "question": "Please Enter your email.",
      "placeholder": "info@doneforyou.com",
      "isRequired": true,
      "validation": {
        "pattern": "^[A-Z0-9._%+-]+@[A-Z0-9.-]+\\.[A-Z]{2,}$",
