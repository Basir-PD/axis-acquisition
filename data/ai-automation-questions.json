      }
    },
    {
      "id": "employees",
      "type": "radio",
      "question": "How many employees are in your organization?*",
      "options": [
        "1 - 5",
        "6 - 15",
        "16 - 50",
        "50 - 150",
        "150 - 400",
        "400+"
